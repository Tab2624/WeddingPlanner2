<h1>Welcome @Context.Session.GetString("FirstName")!</h1>
    <p><a asp-action="/">Home</a> | Plan a Wedding 
    <form asp-action="Logout" asp-controller="User" method="Post">
        <button class="btn btn-primary">Logout</button>
    </form>
</div>
@model Wedding
<div class="container">
    <div class="row">
        <h3>Plan a Wedding</h3>
        <form asp-action="CreateWedding" method="POST" asp-controller="Weddings">
            <div class="form-group">
                <label asp-for="Wedder1"></label>
                <input asp-for="Wedder1" class="form-control">
                <span asp-validation-for="Wedder1"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wedder2"></label>
                <input asp-for="Wedder2" class="form-control">
                <span asp-validation-for="Wedder2"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date"></label>
                <input asp-for="Date" class="form-control">
                <span asp-validation-for="Date"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control">
                <span asp-validation-for="Address"></span>
            </div>
            <button class="btn btn-success">Create</button>
        </form>
    </div>
</div>